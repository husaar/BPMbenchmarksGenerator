<Window x:Class="BPMbenchmarksGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BPMbenchmarksGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabSystem" HorizontalAlignment="Left" Height="301" Margin="10,10,0,0" VerticalAlignment="Top" Width="499">

            <TabItem Header="Generate" >
                <StackPanel Background="White">
                    <Label x:Name="lblInstancesSetsNumber" Content="Specify number of instances sets to generate:"/>
                    <TextBox Height="23" TextWrapping="Wrap" Text="TextBox"/>
                    <Button x:Name="btnGenerate" Content="Generate" Click="btnGenerate_Click"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Customize">
                <StackPanel Background="White">

                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
