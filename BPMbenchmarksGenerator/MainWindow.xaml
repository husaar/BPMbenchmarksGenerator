<Window x:Class="BPMbenchmarksGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BPMbenchmarksGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabSystem" HorizontalAlignment="Left" Height="301" Margin="10,10,0,0" VerticalAlignment="Top" Width="499">

            <TabItem Header="Generate" >
                <StackPanel Background="White">
                    
                    <ToolBar x:Name="tlbGenerateTab" Height="31" Margin="0,10,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220*"/>
                                <ColumnDefinition Width="273*"/>
                            </Grid.ColumnDefinitions>
                            <Button Width="50" x:Name="btnPath" Content="Path" Grid.Column="0" Click="btnPath_Click" />
                            <Button Width="50" x:Name="btnExit" Content="Exit" Grid.Column="1" Click="btnExit_Click"/>
                        </Grid>

                </ToolBar>
                    
                    <Grid Margin="10,10,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220*"/>
                            <ColumnDefinition Width="273*"/>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="lblInstancesSetsNumber" Grid.Column="0" 
                               Content="Number of instances sets to generate:" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="txtInstancesSetsNumber" TextWrapping="Wrap" Grid.Column="1"/>
                    </Grid>
                    
                    <Button x:Name="btnGenerate" Margin="10,10,10,0" Content="Generate" Click="btnGenerate_Click"/>
                    
                    <TextBox x:Name="txtStatus" IsReadOnly="True" Height="141" TextWrapping="Wrap" 
                             Text="Ready for benchmark generation." Margin="10,10,10,0"/>
                    
                </StackPanel>
            </TabItem>

            <TabItem Header="Customize">
                <StackPanel Background="White">

                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
