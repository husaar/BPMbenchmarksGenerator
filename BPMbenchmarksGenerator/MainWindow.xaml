<Window x:Class="BPMbenchmarksGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BPMbenchmarksGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabSystem" HorizontalAlignment="Left" Height="301" Margin="10,10,0,0" VerticalAlignment="Top" Width="499">

            <TabItem Header="Generate" >
                <StackPanel Background="White">

                </StackPanel>
            </TabItem>

            <TabItem Header="Customize">
                <StackPanel Background="White">
                    <RadioButton x:Name="radioAllCases" GroupName="BenchmarksParameters" Content="Generate all benchmarks cases."
                                 Margin="10,10,10,0"/>

                    <RadioButton x:Name="radioCustomSemi" GroupName="BenchmarksParameters"
                                 Margin="10,10,10,0">
                        <StackPanel Width="300">
                            <TextBlock Text="Generate benchmark cases with default range."/>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="59*"/>
                                    <ColumnDefinition Width="91*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Number of Jobs: " Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,169,0"/>
                                <ComboBox Grid.Column="1" Grid.Row="0" Margin="4,0,0,0"/>
                                <TextBlock Text="Job processing time: " Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,169,0"/>
                                <ComboBox Grid.Column="1" Grid.Row="1" Margin="4,0,0,0"/>
                                <TextBlock Text="Job size: " Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,169,0"/>
                                <ComboBox Grid.Column="1" Grid.Row="2" Margin="4,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton  x:Name="radioCustomFull" GroupName="BenchmarksParameters"
                                  Margin="10,10,10,0">
                        <StackPanel Width="300">
                            <TextBlock Text="Generate benchmark cases with custom range."/>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="59*"/>
                                    <ColumnDefinition Width="91*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Number of Jobs: " Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,169,0"/>
                                <TextBox Width="100"  Grid.Column="1" Grid.Row="0"/>
                                <TextBlock Text="Job processing time: " Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,169,0"/>
                                <TextBox  Width="100" Grid.Column="1" Grid.Row="1"/>
                                <TextBlock Text="Job size: " Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,169,0"/>
                                <TextBox  Width="100" Grid.Column="1" Grid.Row="2"/>
                            </Grid>
                        </StackPanel>

                    </RadioButton>

                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
